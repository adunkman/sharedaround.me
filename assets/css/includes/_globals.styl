*
  box-sizing: border-box

html
  background-color: #eee
  background: -webkit-gradient(radial, 50% 50%, 0, 50% 50%, 100, color-stop(0%, rgba(0, 0, 0, 0.1)), color-stop(100%, rgba(0, 0, 0, 0.3)));
  background: -webkit-radial-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.3));
  background: -moz-radial-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.3));
  background: -o-radial-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.3));
  background: radial-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.3));
  background-attachment: fixed
  color: #444
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  height: 100%

body
  height: 100%
  margin: 0

